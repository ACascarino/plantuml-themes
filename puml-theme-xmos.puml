!$THEME = "xmos"

skinparam backgroundColor $BGCOLOR
skinparam useBetaStyle false

!$X_DARKGREY = "#222222"
!$X_LIGHTGREY = "#CCCCCC"

!$X_BLUE = "#2B9CFF"
!$X_BLUE80 = "#55B0FF"
!$X_BLUE60 = "#80C4FF"
!$X_BLUE30 = "#C0E2FF"

!$X_GREEN = "#00C850"
!$X_GREEN80 = "#33D373"
!$X_GREEN60 = "#66DE96"
!$X_GREEN30 = "#B3EFCB"

!$X_BLUEACC = "#50D0F3"
!$X_GREENACC = "#90F6B9"

!$X_RED = "#FA8C82"
!$X_ORANGE = "#FAB46E"
!$X_YELLOW = "#FADC8C"
!$X_PURPLE = "#C695FF"
!$X_STEEL = "#9AB5C7"

!$WHITE = "#FFFFFF"
!$BLACK = "#000000"

!if %not(%variable_exists("$BGCOLOR"))
!$BGCOLOR = $WHITE
!endif
!$FGCOLOR = $DARK

!$PRIMARY = $X_BLUE
!$PRIMARY_LIGHT = $X_BLUE30
!$PRIMARY_DARK = $X_DARKGREY
!$PRIMARY_TEXT = $WHITE

!$SECONDARY = $X_GREEN
!$SECONDARY_LIGHT = $X_GREEN30
!$SECONDARY_DARK = $X_DARKGREY
!$SECONDARY_TEXT = $WHITE

!$DARK_TEXT = $BLACK

!$INFO = $X_STEEL
!$INFO_LIGHT = $X_STEEL
!$INFO_DARK = $X_DARKGREY
!$INFO_TEXT = $BLACK

!$SUCCESS = $X_PURPLE
!$SUCCESS_LIGHT = $X_PURPLE
!$SUCCESS_DARK = $X_DARKGREY
!$SUCCESS_TEXT = $BLACK

!$WARNING = $X_ORANGE
!$WARNING_LIGHT = $X_YELLOW
!$WARNING_DARK = $X_DARKGREY
!$WARNING_TEXT = $BLACK

!$DANGER = $X_RED
!$DANGER_LIGHT = $X_ORANGE
!$DANGER_DARK = $X_DARKGREY
!$DANGER_TEXT = $BLACK

!procedure $success($msg)
  <font color=$SUCCESS><b>$msg
!endprocedure

!procedure $failure($msg)
  <font color=$DANGER><b>$msg
!endprocedure

!procedure $warning($msg)
  <font color=$WARNING><b>$msg
!endprocedure

!procedure $primary_scheme()
    FontColor $PRIMARY_TEXT
    BorderColor $PRIMARY_DARK
    BackgroundColor $PRIMARY
!endprocedure
''
'' Style settings
''
<style>
  root {
    BackgroundColor $BGCOLOR
    FontColor $DARK_TEXT
    HyperLinkColor $X_BLUEACC
    LineColor $PRIMARY_DARK
    LineThickness 1
    Margin 10
    Padding 6
    Shadowing 0.0
  }
  node {
   Padding 1
   roundcorner 0
   BackgroundColor $PRIMARY
  }
  caption {
    LineThickness 0
  }
  footer {
    LineThickness 0
  }
  groupHeader {
    BackgroundColor $SECONDARY
    FontColor $INFO
    FontStyle bold
  }
  header {
    LineThickness 0
  }
  referenceHeader {
    BackgroundColor $BGCOLOR
    FontColor $DARK
    FontStyle bold
  }
  separator {
    BackgroundColor $FGCOLOR
    FontColor $BGCOLOR
    FontStyle bold
  }
  nwdiagDiagram {
    network {
        $primary_scheme()    
        LineColor $PRIMARY
        LineThickness 1.0
        FontColor $PRIMARY_TEXT
    }
    server {
        $primary_scheme()
    }
    arrow {
        FontColor $DARK_TEXT
        LineColor $PRIMARY_DARK
    }
    group {
        BackGroundColor $LIGHT
        LineColor $LIGHT_DARK
        LineThickness 2.0
        Margin 5
        Padding 5
    }
  }
  ganttDiagram {
    task {
        BackgroundColor $PRIMARY
        LineColor $PRIMARY
        Margin 2
        Padding 0
    }
    separator {
        LineColor $SECONDARY
        BackGroundColor $SECONDARY
        FontColor $SECONDARY_TEXT
        Margin 2
        Padding 0
    }
    milestone {
        FontColor $INFO
        FontSize 16
        FontStyle italic
        BackGroundColor $SECONDARY
        LineColor $SECONDARY_DARK
    }
    timeline {
        BackgroundColor $PRIMARY
        FontColor $SECONDARY_TEXT
    }
    closed {
        BackgroundColor $WARNING
        FontColor $WARNING_TEXT
    }
  }
</style>
''
'' Global Default Values
''
skinparam defaultFontName        "Manrope Medium"
skinparam defaultFontSize        12
skinparam dpi                    300
skinparam shadowing              false
skinparam roundcorner            0
skinparam ParticipantPadding     30
skinparam BoxPadding             30
skinparam Padding                10

' Default text alignment for multiline text
skinparam defaultTextAlignment   left

' Target for SVG links (_blank, _self, _parent, _top)
skinparam svgLinkTarget          _blank

' Allow mixing of PlantUML languages in one diagram
skinparam allowmixing            true

' Sets the number of spaces for a tab character
skinparam tabSize                4

' Max width for messages in sequence diagrams before wrapping
skinparam maxMessageSize         150

' Sets the style for guillemets (« and »)
skinparam guillemet              false

skinparam ArrowColor             $PRIMARY_DARK
skinparam stereotype {
    CBackgroundColor $X_RED
    CBorderColor $PRIMARY_DARK
    ABackgroundColor $X_ORANGE
    ABorderColor $PRIMARY_DARK
    IBackgroundColor $X_YELLOW
    IBorderColor $PRIMARY_DARK
    EBackgroundColor $X_PURPLE
    EBorderColor $PRIMARY_DARK
    NBackgroundColor $X_STEEL
    NBorderColor $PRIMARY_DARK
}
skinparam title {
    FontColor                    $DARK_TEXT
    BorderColor                  $PRIMARY
    FontSize                     16
    BorderRoundCorner            0
    BorderThickness              1
}

skinparam legend {
    BackgroundColor $PRIMARY
    BorderColor $PRIMARY_DARK
    FontColor $PRIMARY_TEXT
}

